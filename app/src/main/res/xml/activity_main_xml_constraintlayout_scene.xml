<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    >

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="300">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/tvImageView"
               android:scaleX="0.8"
               android:scaleY="0.8"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/tvImageView"
               motion:framePosition="100"
               android:scaleX="1"
               android:scaleY="1"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/phoneImageView"
               motion:framePosition="0"
               android:scaleX="0.8"
               android:scaleY="0.8"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/phoneImageView"
               motion:framePosition="100"
               android:scaleX="1"
               android:scaleY="1"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/tabletImageView"
               motion:framePosition="0"
               android:scaleY="0.8"
               android:scaleX="0.8"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/tabletImageView"
               motion:framePosition="100"
               android:scaleY="1"
               android:scaleX="1"
               android:alpha="1" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/tvImageView"
            android:layout_width="400dp"
            android:layout_height="250dp"
            motion:layout_constraintVertical_bias="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            />
        <Constraint
            android:id="@+id/phoneImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintVertical_bias="1.0"
            />
        <Constraint
            android:id="@+id/tabletImageView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="1.5"
            />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/tvImageView"
            android:layout_width="400dp"
            android:layout_height="250dp"
            motion:layout_constraintVertical_bias="0.8"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            />
        <Constraint
            android:id="@+id/phoneImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintVertical_bias="0.8"
            android:translationX="20dp"
            android:translationY="-5dp"
            />
        <Constraint
            android:id="@+id/tabletImageView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="1.3"
            android:translationX="-20dp"
            android:translationY="-10dp"
            />

    </ConstraintSet>
</MotionScene>